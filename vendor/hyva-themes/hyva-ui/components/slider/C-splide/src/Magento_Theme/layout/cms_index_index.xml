<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block name="slider-c" template="Magento_Theme::elements/slider-c.phtml">
                <arguments>
                    <argument name="slider_style" xsi:type="string">slide</argument> <!-- Slider slide style (fade/slide)-->
                    <argument name="show_arrows" xsi:type="string">end</argument> <!-- Show Slider nav arrows (true/false/start/end) -->
                    <argument name="show_dots" xsi:type="boolean">true</argument> <!-- Show dots (true/false) -->
                    <argument name="speed" xsi:type="number">1000</argument> <!-- Slide animation speed -->
                    <argument name="loop" xsi:type="boolean">false</argument> <!-- Should the slider loops (true/false) -->
                    <argument name="autoplay" xsi:type="boolean">false</argument> <!-- Should the slider autoplay (true/false) -->
                    <argument name="load_first_eager" xsi:type="boolean">true</argument> <!-- Load the first slider image eager (true/false) -->
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="script-alpine-js">
            <block name="alpine-plugin-splide-js" template="Magento_Theme::page/js/plugins/splide-js.phtml"/>
        </referenceBlock>
    </body>
</page>
