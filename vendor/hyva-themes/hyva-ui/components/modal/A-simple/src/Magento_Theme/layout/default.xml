<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <update handle="hyva_modal"/>
    <referenceContainer name="content.bottom">
        <!--
        /**
         * This is not a ready-to-use layout.xml file. It is a reference to show one possible way to include modals
         * into your theme/module.
         *
         * This example wraps modals in a DIV with classes that are usually already available in your Tailwind CSS.
         * By default this file is not purged by Tailwind.
         */
        -->
        <container htmlTag="div" htmlClass="flex my-12 gap-2 items-center">
            <block name="confirmation.php.example" template="Magento_Theme::modals/confirmation-php.phtml"/>
            <block name="modal.php.example" template="Magento_Theme::modals/modal-php.phtml"/>
            <block name="modal.js.example" template="Magento_Theme::modals/modal-js.phtml"/>
        </container>
    </referenceContainer>
</page>
